<% if @user.destroyed? %>
  <%= render "services/turbo_append_flash", type: "notice", message: "Successfully deleted '#{@user.username}'." %>
  <%= turbo_stream.remove dom_id(@user) %>
<% else %>
  <%= render "services/turbo_append_flash", type: "error", message: @user.errors.full_messages.to_sentence + "." %>
<% end %>
