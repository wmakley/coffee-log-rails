<%= custom_recaptcha_scripts('request-password-reset', action: 'request_password_reset') %>

<%= form_with(model: object, url: password_reset_request_path, html: { id: 'request-password-reset' }) do |f| %>
  <%= custom_recaptcha_input_tag %>
  <div class="mb-3">
    <%= input f, :email, as: :email_field,
              label: "Enter your email address:",
              required: true,
              input_html: {
                class: "form-control form-control-lg",
                placeholder: "Email address",
                autofocus: true,
              }
    %>
  </div>
  <p>
    <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
    <%= cancel_button root_path, class: "btn-lg" %>
  </p>
<% end %>
