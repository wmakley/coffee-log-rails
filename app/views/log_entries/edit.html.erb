<% content_for(:title, "Edit Entry") %>
<h1>Edit Log Entry</h1>

<%= turbo_frame_tag "entry" do %>
  <%= render "form", object: @log_entry, url: log_entry_path(@log, @log_entry) %>

  <p>
    <%= link_to("Cancel", log_entry_path(@log, @log_entry)) %>
    |
    <%= link_to("Delete", log_entry_path(@log, @log_entry), data: { method: :delete, confirm: "Are you sure you want to delete this log entry?" }) %>
  </p>
<% end %>
