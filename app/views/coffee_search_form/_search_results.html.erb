<% if search_results.present? -%>
<div class="list-group mb-3">
  <% search_results.each do |coffee| %>
    <%= link_to '#',
                id: "#{dom_id(coffee)}-search-result",
                class: "list-group-item list-group-item-action entry-list-item",
                data: {
                  action: "click->coffee-search-form#selectCoffee",
                  coffee_id: coffee.id,
                } do %>
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">
          <%= coffee.pg_search_highlight %>
        </h5>
        <small>
          <%= coffee.brand_name %>
        </small>
      </div>
    <% end %>
  <% end %>
</div>
<% else -%>
<div>
  <h4 class="text-danger">
    No coffees found matching your search,
    <%= link_to "Add New Coffee?", new_coffee_path(cancel_url: log_entries_path(Current.user.log, params.permit(:query, :coffee_id).to_h)), class: "btn btn-success" %>
  </h4>
</div>
<% end %>
