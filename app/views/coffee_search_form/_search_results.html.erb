<div class="list-group">
  <% search_results.each do |coffee| %>
    <%= link_to "#",
                id: "#{dom_id(coffee)}-search-result",
                class: "list-group-item list-group-item-action entry-list-item" do %>
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">
          <%= coffee.name %>
        </h5>
        <small>
          <%= coffee.brand_name %>
        </small>
      </div>
      <small><%= [log_entry.grind_notes, log_entry.water].select(&:present?).join('; ') %></small>
      <p class="mb-1">
        <%= log_entry.tasting_notes %>
      </p>
    <% end %>
  <% end %>
</div>
