<%= form_with(model: object, url: url, html: { class: "user-group" }) do |f| %>
  <%= render "services/base_errors", object: f.object %>

  <div class="mb-3">
    <%= input f, :name,
              label: "Group Name",
              required: true,
              input_html: {
                class: "form-control form-control-lg".freeze,
                autofocus: true,
                minlength: 1,
                maxlength: 255,
              } %>
  </div>

  <p>
    <button type="submit" class="btn btn-primary">
      <%= object.new_record? ? "Create" : "Update" %> User Group
    </button>

    <%= cancel_button :back %>
  </p>
<% end %>
