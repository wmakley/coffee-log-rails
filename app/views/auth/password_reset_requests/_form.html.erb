<%= recaptcha_protected_form_with(model: object, url: auth_password_reset_request_path, action: "request_password_reset", html: {
  id: 'request-password-reset',
}) do |f| %>
  <div class="mb-3">
    <%= input f, :email, as: :email_field,
              label: "Enter your email address:",
              required: true,
              input_html: {
                class: "form-control form-control-lg",
                placeholder: "Email address",
                autofocus: true,
              }
    %>
  </div>
  <p>
    <%= f.submit "Submit", class: "btn btn-primary btn-lg", data: { recaptcha_v3_target: "submit" } %>
    <%= cancel_button root_path, class: "btn-lg" %>
  </p>
<% end %>
