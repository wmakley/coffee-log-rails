<%= recaptcha_protected_form_with(model: object, url: url, action: "login", html: {
  id: "login-form",
}) do |f| %>
  <%= form_field f, :username, modifiers: "is-medium" do |field| %>
    <%= field.label %>
    <%= field.control modifiers: "has-icons-left" do %>
      <%= field.input maxlength: 255, placeholder: "Username" %>
      <%= field.icon "is-left" do %>
        <i class="bi bi-person-fill"></i>
      <% end %>
      <%= field.invalid_feedback %>
    <% end %>
  <% end %>

  <%= form_field f, :password, type: :password_field, modifiers: "is-medium" do |field| %>
    <%= field.label %>
    <%= field.control modifiers: "has-icons-left" do %>
      <%= field.input maxlength: 255, placeholder: "Password" %>
      <%= field.icon "is-left" do %>
        <i class="bi bi-key-fill"></i>
      <% end %>
      <%= field.invalid_feedback %>
    <% end %>
  <% end %>

  <div class="field">
    <%= link_to "Forgot password", new_auth_password_reset_request_path %>
    |
    <%= link_to "Sign up!", new_auth_signup_path %>
  </div>

  <div class="field is-grouped">
    <%= f.submit "Login", id: "submit-btn", class: "button is-primary is-medium" %>
  </div>
<% end %>
