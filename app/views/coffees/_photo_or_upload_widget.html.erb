<%= turbo_frame_tag(dom_id(coffee)) do %>
  <% if coffee.photo.attached? %>
    <%= image_tag("", alt: "Bag of #{coffee.name}", class: "card-img-top") %>
  <% else %>
    <%= form_with(model: coffee, html: { class: "card-header" }) do |f| %>
      <%- id = "#{dom_id(coffee)}_photo" -%>
      <label for="<%= id %>" class="form-label">Upload Photo:</label>
      <%= f.file_field :photo, class: "form-control", id: id %>
    <% end %>
  <% end %>
<% end %>
