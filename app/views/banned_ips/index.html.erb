<h1>Banned IP's</h1>

<table class="table table-striped table-condensed">
  <thead>
  <tr>
    <th>IP Address</th>
    <th>Created At</th>
    <th>Updated At</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @banned_ips.each do |banned_ip| %>
    <tr>
      <td><%= banned_ip.ip_address %></td>
      <td><%= banned_ip.created_at.to_s(:long) %></td>
      <td><%= banned_ip.updated_at.to_s(:long) %></td>
      <td>
        <%= link_to("Un-Ban", banned_ip, class: "btn btn-warning btn-sm", data: {
          'turbo-method' => :delete,
        }) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>Login Attempts</h2>
<table class="table table-striped table-condensed">
  <thead>
  <tr>
    <th>IP Address</th>
    <th>Attempts</th>
    <th>Created At</th>
    <th>Updated At</th>
  </tr>
  </thead>
  <tbody>
  <% @login_attempts.each do |login_attempt| %>
    <tr>
      <td><%= login_attempt.ip_address %></td>
      <td><%= login_attempt.attempts %></td>
      <td><%= login_attempt.created_at.to_s(:long) %></td>
      <td><%= login_attempt.updated_at.to_s(:long) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
